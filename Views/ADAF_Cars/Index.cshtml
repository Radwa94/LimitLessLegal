@model IEnumerable<ADAF_Cars>

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/ADAF_CarsController" type="text/css">


    <div style="background-color:lightblue">
        </div>
<body>
    <button id="btn-search">Search</button>
</body>

        <div class="card-body">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-12"> <h4>السيارات</h4></div>
                </div>
            </div>

            <form asp-action="index">
                <div class="row">
                    <div class="col-md-1">
                        <label>Search</label>
                    </div>
                    <div class="col-md-4">
                        <input name="id" type="text" />
                    </div>
                    
                    <div class="col-md-2">
                        <input asp-action="index" class="btn-sm btn-info" value="Search" type="submit" />
                    </div>
                </div>

            </form>
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table table-responsive-sm table-bordered">
                <thead>
                    <tr class="table-info">
                        <th>
                            @Html.DisplayNameFor(model => model.car_board)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.car_chassis)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.car_motor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.car_brand)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.license_start_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.license_end_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.license_examination_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.trafiic_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.person_used)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.driver_insurance)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.licenseimg)
                        </th>


                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.car_board)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.car_chassis)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.car_motor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.car_brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.license_start_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.license_end_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.license_examination_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trafiic_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.person_used)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.driver_insurance)
                            </td>
                            <td>
                                <img src="~/Upload/ADAF_Cars/@Html.DisplayFor(modelItem =>item.licenseimg)" width="60" height="60" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.licenseimg)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.car_id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.car_id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.car_id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

@model LGL_Lawsuit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <div class="row">
            <h3 class="card-title">القضايا</h3>
        </div>
    </div>
    <hr />
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="navbar-collapse collapse">
            @using (Html.BeginForm("Index", "Search", FormMethod.Get))
            {
                <ul class="nav navbar-nav">
                    <li>@Html.TextBox("id", ViewBag.CurrentFilter as string)</li>
                    <li><input type="submit" value="Search" /></li>
                </ul>
            }
        </div>
        <div class="row">
            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="lawsuit_number" class="control-label"></label>
                    <input asp-for="lawsuit_number" class="form-control" />
                    <span asp-validation-for="lawsuit_number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cause_year" class="control-label"></label>
                    <input asp-for="cause_year" class="form-control" />
                    <span asp-validation-for="cause_year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cause_id" class="control-label"></label>
                    <select asp-for="cause_id" class="form-control" asp-items="ViewBag.cause_id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="lawsuit_circle" class="control-label"></label>
                    <input asp-for="lawsuit_circle" class="form-control" />
                    <span asp-validation-for="lawsuit_circle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="court_id" class="control-label"></label>
                    <select asp-for="court_id" class="form-control" asp-items="ViewBag.court_id"></select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="sitting_date_first" class="control-label"></label>
                    <input asp-for="sitting_date_first" class="form-control" />
                    <span asp-validation-for="sitting_date_first" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="litigant_id" class="control-label"></label>
                    <select asp-for="litigant_id" class="form-control" asp-items="ViewBag.litigant_id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="client_id" class="control-label"></label>
                    <select asp-for="client_id" class="form-control" asp-items="ViewBag.client_id"></select>
                </div>
                @*<div class="form-group">
                <label asp-for="client_type_id" class="control-label"></label>
                <input asp-for="client_type_id" class="form-control" />
                <span asp-validation-for="client_type_id" class="text-danger"></span>
            </div>*@
                <div class="form-group">
                    <label asp-for="client_type_id" class="control-label"></label>
                    <select asp-for="client_type_id" class="form-control" asp-items="ViewBag.client_type_id"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ID_Judgment" class="control-label"></label>
                <select asp-for="ID_Judgment" class="form-control" asp-items="ViewBag.ID_Judgment"></select>

            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="PronouncingJudgment" class="control-label"></label>
                    <input asp-for="PronouncingJudgment" class="form-control" />
                    <span asp-validation-for="PronouncingJudgment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lawsuit_degree" class="control-label"></label>
                    <input asp-for="lawsuit_degree" class="form-control" />
                    <span asp-validation-for="lawsuit_degree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="trapping_number" class="control-label"></label>
                    <input asp-for="trapping_number" class="form-control" />
                    <span asp-validation-for="trapping_number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lawsuit_Status_id" class="control-label"></label>
                    <select asp-for="lawsuit_Status_id" class="form-control" asp-items="ViewBag.lawsuit_Status_id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="associate_date" class="control-label"></label>
                    <input asp-for="associate_date" class="form-control" />
                    <span asp-validation-for="associate_date" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="lawsuit_description" class="control-label"></label>
                    <input asp-for="lawsuit_description" class="form-control" />
                    <span asp-validation-for="lawsuit_description" class="text-danger"></span>
                </div>
               
                @*<div class="form-group">
                <label asp-for="lawsuitfile" class="control-label"></label>
                <input asp-for="lawsuitfile" class="form-control" />
                <span asp-validation-for="lawsuitfile" class="text-danger"></span>
            </div>*@

                <div class="form-group">
                    <label asp-for="lawsuitfile" class="control-label"></label>
                    <input type="file" name="files" asp-for="lawsuitfile" class="form-control" />
                    <span asp-validation-for="lawsuitfile" class="text-danger"> </span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </div>
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

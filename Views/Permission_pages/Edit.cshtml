@model permisions

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>الصلاحيات</h1>

<h4>Permission_pages</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div class="form-group">
                <label asp-for="group_id" class="control-label"></label>
                <select asp-for="group_id" class="form-control" asp-items="ViewBag.groups"></select>
                
            </div>

            <div class="form-group">
                <label class="control-label">الصلاحيات</label>
                <hr />
                @for (int i = 0; i < Model.lstchekbox.Count; i++)
                {
                    <input type="hidden" asp-for="lstchekbox[i].page_url" />
                    <input type="checkbox" asp-for="lstchekbox[i].is_selected" />
                    <label asp-for="lstchekbox[i].page_title">@Model.lstchekbox[i].page_title</label>
                }

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


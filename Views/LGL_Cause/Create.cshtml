@model LGL_Cause

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>نوع القضيه</h1>

<h4>LGL_Cause</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cause_name" class="control-label"></label>
                <input asp-for="cause_name" class="form-control" />
                <span asp-validation-for="cause_name" class="text-danger"></span>
            </div>
           

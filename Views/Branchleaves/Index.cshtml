@model IEnumerable<Branchleave>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-body">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-12"> <h4>اوراق الفروع</h4></div>
        </div>
    </div>

    <form asp-action="index">
        <div class="row">
            <div class="col-md-1">
                <label>Search</label>
            </div>
            <div class="col-md-4">
                <input name="id" type="text" />
            </div>
            <div class="col-md-2">
                <input asp-action="index" class="btn-sm btn-info" value="Search" type="submit" />
            </div>
        </div>

    </form>


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-responsive-sm table-bordered">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.branch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name_licens_holder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_responsible_manager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date_being_hired)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nationaid_owner_img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nationaid_manager_img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.card_owner_img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.card_manager_img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.license_number_owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.License_number_Manager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.license_number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.medical_district)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.branch)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name_licens_holder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name_responsible_manager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_being_hired)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nationaid_owner_img)
                    </td>
                    <td>
                        <img src="~/Upload/authorization/@Html.DisplayFor(modelItem => item.nationaid_owner_img)" width="60" height="60" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nationaid_manager_img)
                    </td>
                    <td>
                        <img src="~/Upload/authorization/@Html.DisplayFor(modelItem => item.nationaid_manager_img)" width="60" height="60" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.card_owner_img)
                    </td>
                    <td>
                        <img src="~/Upload/authorization/@Html.DisplayFor(modelItem => item.card_owner_img)" width="60" height="60" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.card_manager_img)
                    </td>
                    <td>
                        <img src="~/Upload/authorization/@Html.DisplayFor(modelItem => item.card_manager_img)" width="60" height="60" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.license_number_owner)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.License_number_Manager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.license_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.medical_district)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model LGL_lawsuit_files

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ملفات القضايا</h1>

<h4>ملفات القضايا</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="lawsuit_files_id" />
            <div class="form-group">
                <label asp-for="lawsuit_id" class="control-label"></label>
                <select asp-for="lawsuit_id" class="form-control" asp-items="ViewBag.lawsuit_id"></select>
                <span asp-validation-for="lawsuit_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lawsuit_files_img" class="control-label"></label>
                <input type="file" id="files" name="files" asp-for="lawsuit_files_img" class="form-control" />
                <span asp-validation-for="lawsuit_files_img" class="text-danger"></span>

                <div style="float:right">
                    <img src="~/Upload/lawsuit/@Html.DisplayFor(model =>model.lawsuit_files_img)" width="60" height="60" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="creation_user" class="control-label"></label>
                <input asp-for="creation_user" class="form-control" />
                <span asp-validation-for="creation_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="last_update_user" class="control-label"></label>
                <input asp-for="last_update_user" class="form-control" />
                <span asp-validation-for="last_update_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
